
public class MinAndMaxAndAvg {

	public int max(int[] array) {
		// TODO Auto-generated method stub
int max =0;

for(int i =0; i<array.length; i++) {
	
	 if(array[i]>max) {
         max = array[i];
      }
}
return max;

	}
	
	public int min(int[] array) {
		// TODO Auto-generated method stub
int min =0;

for(int i =0; i<array.length; i++) {
	
	if(array[i]<min) {
        min = array[i];
     }
}
return min;

	}

}
